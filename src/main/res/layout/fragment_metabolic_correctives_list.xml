<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCafydiaDefaultFullShade">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvCorrectives"
        android:divider="@null"
        android:headerDividersEnabled="false" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/flNoCorrectives">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/metabolic_correctives_list_no_correctives_added_yet"
            style="@style/MyTextAppearance.Footer"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_correctives_big"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp" />
    </FrameLayout>


</LinearLayout>